        </footer>
    </div>

    <script>
        function showSection(sectionId) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => section.classList.remove('active'));
            
            // Show selected section
            document.getElementById(sectionId).classList.add('active');
            
            // Update navigation buttons
            const buttons = document.querySelectorAll('.nav-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }

        function updateValues() {
            const wavelength = document.getElementById('wavelength').value;
            const slitSeparation = document.getElementById('slitSeparation').value;
            const screenDistance = document.getElementById('screenDistance').value;
            
            // Update display values
            document.getElementById('wavelengthValue').textContent = wavelength;
            document.getElementById('slitSeparationValue').textContent = slitSeparation;
            document.getElementById('screenDistanceValue').textContent = screenDistance;
            
            // Calculate fringe spacing: β = λD/d
            const lambda = wavelength * 1e-9; // Convert nm to m
            const d = slitSeparation * 1e-3; // Convert mm to m
            const D = parseFloat(screenDistance); // Already in m
            
            const fringeSpacing = (lambda * D / d) * 1000; // Convert to mm
            const angularSpacing = (lambda / d) * (180 / Math.PI); // Convert to degrees
            
            document.getElementById('fringeSpacing').textContent = fringeSpacing.toFixed(2) + ' mm';
            document.getElementById('angularSpacing').textContent = angularSpacing.toFixed(2) + '°';
        }

        // Initialize calculations
        updateValues();

        // Add smooth scrolling animation
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            });

            const elements = document.querySelectorAll('.result-card, .timeline-item');
            elements.forEach((el) => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        });
    </script>
</body>
